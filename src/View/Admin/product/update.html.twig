{% extends 'layout.html.twig' %}
{% block title %}Admin - Création de catégorie
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}
	<div class="container">
		<h1 class="text-center text-primary fw-bold col-12 col-md-6 mx-auto my-4  fw-bold bg-light border border-secondary p-4 shadow-sm">Gestion des catégories</h1>
		<form class="col-12 col-md-6 mx-auto my-2" method="POST" enctype='multipart/form-data'>
			<div class="form-group">
				<div class="col-12 col-md-6 mx-auto">
					<label for="name">Name</label>
					<input type="text" id="name" name="name" class="form-control" value="{{product.name}}">
				</div>
				<div class="col-12 col-md-6 mx-auto">
					<label for="price">Prix</label>
					<input type="number" id="price" name="price" class="form-control" value="{{product.price}}">
				</div>
			</div>
			<div class="form-group">
				<label for="illustration">Illustration</label>
				<input type="text" id="illustration" name="illustration" class="form-control" value="{{product.illustration}}">
			</div>
			<div class="col-12 col-md-4">
				<label for="category">Catégorie</label>
				<select name="category_id" id="category" class="form-control" value="{{product.category_id}}">
					{% for category in getCategories() %}
						<option value="{{ category.id }}">{{ category.name }}</option>
					{% endfor %}
				</select>
			</div>
			<div class="col-12 col-md-4">
				<label for="stock">Stock</label>
				<input type="number" id="stock" name="stock" class="form-control" value="{{product.stock}}">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea id="description" name="description" class="form-control">
					{{product.description}}
				</textarea>
			</div>
			<input type="hidden" name="id" value="{{product.id}}">
			<button type="submit" class="btn btn-primary">enregistrer</button>
		</form>
	</div>
	{% block javascripts %}{% endblock %}
{% endblock %}
