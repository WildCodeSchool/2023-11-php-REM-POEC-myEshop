{% extends "base.html.twig" %}
{% block title %}
	Recherche produit
{% endblock %}
{% block content %}
	<div class="container">
		<div class="row">
			{% if products is iterable %}
				{% for product in products %}
					<div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-3 mx-auto">
						<div class="card shadow-sm p-1" style=" ">
							<img style="height:200px; width:100%" src="{{ product.illustration }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<h6 class="my-1">catégorie:
									{{product.category}}</h6>
								<hr>
								<h6 class="my-1">prix:
									{{ (product.price / 100)|format(2,',', '.') }}€</h6>
								<h6 class="my-1">stock:
									{{product.stock}}</h6>
								<p class="card-text mt-2 border rounded p-2">{{ product.description|slice(0, 50) }}...</p>
								<div class="d-flex justify-content-between align-items-center">
									<a href="/admin/product/update?id={{product.id}}" class="m-1 fs-3 text-success">
										<i class="fa-solid fa-pen-to-square"></i>
									</a>
									<a href="/admin/product/delete?id={{product.id}}" class="m-1 fs-3 text-danger">
										<i class="fa-solid fa-delete-left"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>
{% endblock %}
