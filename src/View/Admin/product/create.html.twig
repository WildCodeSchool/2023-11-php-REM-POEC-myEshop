{% extends 'base.html.twig' %}
{% block title %}Admin - Ajouter un produit
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}
	<div class="container">
		<h1 class="text-center text-primary fw-bold col-12 col-md-6 mx-auto my-4  fw-bold bg-light border border-secondary p-4 shadow-sm">Ajouter un produit</h1>
		<form class="col-12 col-md-10 col-lg-8 mx-auto my-2 row justify-content-center p-3 bg-light border border-secondary shadow-sm my-3" method="POST" enctype='multipart/form-data'>
			<div class="col-12 col-md-6 mx-auto mb-3">
				<label for="name">Nom du produit</label>
				<input type="text" id="name" name="name" class="form-control">
			</div>
			<div class="col-12 col-md-6 mx-auto mb-3">
				<label for="price">Prix</label>
				<input type="number" id="price" name="price" class="form-control">
			</div>
			<div class="col-12 mb-3">
				<label for="illustration">Illustration</label>
				<input type="text" id="illustration" name="illustration" class="form-control">
			</div>
			<div class="col-12 col-md-6 mb-3">
				<label for="category">Cat√©gorie</label>
				<select name="category_id" id="category" class="form-control">
					{% for category in getCategories() %}
						<option value="{{ category.id }}">{{ category.name }}</option>
					{% endfor %}
				</select>
			</div>
			<div class="col-12 col-md-6 mb-3">
				<label for="stock">Stock</label>
				<input type="number" id="stock" name="stock" class="form-control">
			</div>
			<div class="col-12 mb-3">
				<label for="description">Description</label>
				<textarea rows="8" id="description" name="description" class="form-control"></textarea>
			</div>

			<button type="submit" class="btn btn-primary col-5 my-3">enregistrer</button>
		</form>
	</div>
	{% block javascripts %}{% endblock %}
{% endblock %}
