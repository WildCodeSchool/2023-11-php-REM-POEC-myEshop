{% extends 'base.html.twig' %}

{% block content %}
	<div class="container">
		<h1>Liste des utilisateurs</h1>
		<table class="table mx-auto">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles }}</td>
						<td>
							<a href="/admin/user/update?id={{ user.id}}" class="btn btn-success">Modifier</a>
							<a href="/admin/user/delete?id={{user.id}}" class="btn btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
