{% extends 'base.html.twig' %}
{% block title %}Admin - Création de catégorie
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}
	<div class="container">
		<h1 class="text-center text-primary fw-bold col-12 col-md-6 mx-auto my-4  fw-bold bg-light border border-secondary p-4 shadow-sm">Gestion des catégories</h1>
		<form class="col-12 col-md-6 mx-auto my-2" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" id="name" name="name" class="form-control" required>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea id="description" name="description" class="form-control" required></textarea>
			</div>
			<button type="submit" class="btn btn-primary">enregistrer</button>
		</form>
	</div>

	{% block javascripts %}{% endblock %}
{% endblock %}
