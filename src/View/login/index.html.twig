{% extends "layout.html.twig" %}
{% block title %}
	Connexion
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}
	<div class="container">
		<h1 class="text-center text-primary fw-bold col-12 col-md-6 mx-auto my-4  fw-bold bg-light border border-secondary p-4 shadow-sm">connexion</h1>
		<form method="post" class="col-12 col-md-6 mx-auto text-primary fw-bold bg-light border border-secondary p-4 shadow-lg">
			<div class="mb-3">
				<label for="login-email" class="form-label">Email</label>
				<input type="email" class="form-control" id="login-email" name="email">
			</div>
			<div class="mb-3">
				<label for="login-password" class="form-label">Mot de passe</label>
				<input type="password" class="form-control" id="login-password" name="password">
			</div>
			<div class="mb-3 form-check">
				<input type="checkbox" name="remember_me" class="form-check-input" id="login-check">
				<label class="form-check-label" for="login-check">Se souvenir de moi</label>
			</div>
			<button type="submit" class="btn btn-sm btn-primary my-3">Se connecter</button>
		</form>
	</div>
{% endblock %}
