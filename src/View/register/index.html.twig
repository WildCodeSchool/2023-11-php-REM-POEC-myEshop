{% extends "layout.html.twig" %}
{% block title %}Inscription
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block content %}
	<div class="container">
		<h1 class="text-center text-primary fw-bold col-7 mx-auto my-4">Inscription</h1>

		<form class="mx-auto text-primary" method="post">
			<div class="row col-md-8 col-lg-10 col-xl-10 mx-auto">
				<div class="col-12 col-md-6">
					<label for="register-lastname" class="form-label">Nom</label>
					<input type="text" class="form-control" id="register-lastname" name="lastname">
				</div>
				<div class="col-12 col-md-6">
					<label for="firstname" class="form-label">Prenom</label>
					<input type="text" class="form-control" id="register-firstname" name="firstname">
				</div>
				<div class="col-12 mb-3">
					<label for="register-email" class="form-label">Email</label>
					<input type="text" class="form-control" id="register-email" name="email">
				</div>
				<div class="col-12 col-md-6">
					<label for="register-password" class="form-label">Mot de passe</label>
					<input type="password" class="form-control" id="register-password" name="password">
				</div>
				<div class="col-12 col-md-6">
					<label for="register-c-password" class="form-label">Confirmer le mot de passe</label>
					<input type="password" class="form-control" id="register-c-password" name="c_password">
				</div>
				<div class="d-flex justify-content-end">
					<button class="btn btn-primary my-2" type="submit">s'incrire</button>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
{% block javascripts %}{% endblock %}
