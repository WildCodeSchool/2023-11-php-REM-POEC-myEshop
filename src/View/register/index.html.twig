{% extends "layout.html.twig" %}
{% block title %}Inscription
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block content %}
	<div class="container my-4">
		<h1 class="text-center text-primary fw-bold mx-auto my-4 col-12 col-md-10 col-lg-8 col-xl-6 bg-light border boder-secondary shadow-sm">Inscription</h1>
		<div style="display:none" id="" class="alert alert-danger col-md-5 mx-auto error-message"></div>

		<form id="register-form" class="mx-auto text-primary col-12 col-md-10 col-lg-8 col-xl-6 bg-light border boder-secondary shadow-lg p-4" method="post" enctype="multipart/form-data">

			<div class="row mx-auto">
				<div class="col-12 col-md-6">
					<label for="register-lastname" class="form-label">Nom</label>
					<input type="text" value="{{post.lastname}}" class="form-control" id="register-lastname" name="lastname">
					<span class="text-danger mt-2" id="lastnameMessage"></span>
				</div>
				<div class="col-12 col-md-6">
					<label for="firstname" class="form-label">Prenom</label>
					<input type="text" class="form-control" value=" {{post.lastname}}" id="register-firstname" name="firstname">
					<span id="firstnameMessage"></span>
				</div>
				<div class="col-12 mb-3">
					<label for="register-email" class="form-label">Email</label>
					<input type="text" class="form-control" id="register-email" name="email">
					<span id="emailMessage"></span>
				</div>
				<div class="col-12 col-md-6">
					<label for="register-password" class="form-label">Mot de passe</label>
					<input type="text" class="form-control" id="register-password" name="password">
					<span id="passwordMessage"></span>
				</div>
				<div class="col-12 col-md-6">
					<label for="register-c-password" class="form-label">Confirmer le mot de passe</label>
					<input type="text" class="form-control" id="register-c-password" name="c_password">
					<span id="c-passwordMessage"></span>
				</div>

				<div class="col-12 col-md-6">
					<label for="profil" class="form-label">Photo de profil</label>
					<input type="hidden" name="MAX_FILE_SIZE" value="1000000" id="profil">
					<input type="file" id="profil" name="avatar" >
				</div>

				<div class="d-flex justify-content-end">
					<button class="btn btn-sm btn-primary my-3" type="submit" role="button">s'incrire</button>
				</div>
			</div>
		</form>
	</div>
	{% block javascripts %}
		<script src="/assets/javascript/register.js"></script>
	{% endblock %}
{% endblock %}
