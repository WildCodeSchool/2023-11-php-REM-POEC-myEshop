{% extends "layout.html.twig" %}
{% block title %}
	Affichage d'un produit
{% endblock %}
{% block content %}
	<div class="container">
		<div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-3 mx-auto my-5">
			<div class="card shadow-sm p-1" style=" ">
				<img style="height:200px; width:100%" src="{{product.illustration}}" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">{{product.name}}</h5>
					<h6>{{product.category_names}}</h6>
					<p class="card-text">{{product.description|slice(0,100)}}</p>
					<a href="" class="btn btn-success">Ajouter</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
