{% extends "layout.html.twig" %}
{% block title %}Contact
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block content %}
	{% if successMessage %}
		<div class="alert alert-success text-center col-12 col-md-6 mx-auto my-4" role="alert">
			<span class="alert-inner--icon">
				<i class="fa fa-thumbs-up"></i>
			</span>
			{{ successMessage }}
		</div>
	{% endif %}
	<div class="container my-8">
		<div class="row">
			<div class="col-4 marging-top">
				<h5 class="text-center text-primary mx-auto py-5 d-flex flex-column align-items-center"></h5>
				<div class="text-center text-primary mx-auto py-5 my-auto d-flex flex-column align-items-centerbg-light border boder-secondary shadow-sm ">
					<h5 class="text-center text-primary mx-auto py-5 d-flex flex-column align-items-center">Informations</h5>
					<div class="mb-2">
						<i class="fas fa-building"></i>
						<br>
						Myeshop
					</div>
					<div class="mb-2">
						<i class="fas fa-map-marker-alt"></i>
						<br>
						180 Rue comics
						<br>
						75012 Paris</div>
					<div class="mb-2">
						<i class="fas fa-phone"></i>
						<br>
						01 02 03 04 05</div>
					<div>
						<i class="fas fa-envelope"></i>
						<br>contact@myeshop-comics.fr</div>
				</div>

			</div>
			<div class="col-6">
				<h2 class="text-center text-primary fw-bold mx-auto my-4 bg-light border boder-secondary shadow-sm">Contact</h2>
				<div style="display:none" id="" class="alert alert-danger mx-auto error-message"></div>
				<form id="register-form" class="mx-auto text-primary bg-light border boder-secondary shadow-lg p-4" method="post" action="/contact/add">
					<div class="row mx-auto">
						<div class="col-12 col-md-6">
							<label for="register-lastname" class="form-label">Nom</label>
							<input type="text" class="form-control" id="register-lastname" name="lastname" required>
							<span class="text-danger mt-2" id="lastnameMessage"></span>
						</div>
						<div class="col-12 col-md-6">
							<label for="firstname" class="form-label">Prénom</label>
							<input type="text" class="form-control" id="register-firstname" name="firstname" required>
							<span id="firstnameMessage"></span>
						</div>
						<div class="col-12 mb-3">
							<label for="register-email" class="form-label">Email</label>
							<input type="email" class="form-control" id="register-email" name="email" required>
							<span id="emailMessage"></span>
						</div>
						<div class="col-12 col-md-6">
							<label for="register-phone" class="form-label">Téléphone</label>
							<input
							type="tel" class="form-control" id="register-phone" name="phone" pattern="^0[1-9](\d{2}){4}$" required>
							{# <small>Forma: 0102030405</small><br> #}
							<span id="phone"></span>
						</div>
						<div class="col-12 col-md-12">
							<label for="register-message" class="form-label">Votre message</label>
							<textarea class="form-control" id="register-message" name="message" required></textarea>
							<span id="message"></span>
						</div>
						<div class="d-flex justify-content-end">
							<button class="btn btn-sm btn-primary my-3" type="submit" role="button">Envoyer</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	{% block javascripts %}{% endblock %}
{% endblock %}
