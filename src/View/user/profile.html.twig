{% extends 'layout.html.twig' %}
{% block title %}Page Profil{% endblock %}

{% block content %}
	
	<div class="container d-flex align-items-center justify-content-center " style="height: 70vh;">
		
		<div class="card text-center rounded card_profil" >
			<div class="card-header py-3">
				<h1 class="card-title text-center h1 p-1 m-0">Mon profil</h1>
			</div>
			<div class="card-body d-flex justify-content-between" >
				<div class="d-flex flex-column" style="width: 50%;" >
					<p class="text-start">Nom : <span class="fw-bold">{{ user.lastname }}</span></p>
					<p class="text-start">Pr√©nom : <span class="fw-bold">{{ user.firstname  }}</span></p>
					<p class="text-start">Email : <span class="fw-bold">{{ user.email }}</span></p>
				</div>

				<div style="width: 30%;" class="d-flex align-items-center">	

					{% if user.avatar == "random-user.png" %}				
						<img src="/upload/profil/random-user.png" alt="photo de profil" class="img_profil">
					{% else %}
						<img src="upload/profil/{{ user.avatar }}" alt="{{ user.lastname }}" class="img_profil">
					{% endif %}

				</div>
			</div>

			<div class="card-footer d-flex justify-content-between py-3 ">
				<a href="/profile/update?id={{ user.id }}" class="btn btn-success rounded py-1 px-2">Modifier</a>
				<a href="" class="btn btn-danger rounded py-1 px-2">Supprimer</a>
			</div>
		</div>
	</div>
	{% block javascripts %}
		<script src="/assets/javascript/profile.js"></script>
	{% endblock %}
{% endblock %}
