{% extends "layout.html.twig" %}
{% block title %}Modfier mon profil
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block content %}
	<div class="container my-4">
		
		<h1 class="text-center text-primary fw-bold  mx-auto my-4 col-12 col-md-9 bg-light border boder-secondary shadow-sm h1">Modifier mon profil</h1>
		<div style="display:none" id="" class="alert alert-danger col-md-5 mx-auto error-message"></div>
		<form class="mx-auto text-primary col-12 col-md-9 bg-light border shadow-lg p-3" method="post" enctype="multipart/form-data">
			<div class="row col-md-8 col-lg-10 col-xl-8 mx-auto">
				<div class="col-12 col-md-6 my-1">
					<label for="lastname" class="form-label">Nom</label>
					<input type="text" value="{% if user.lastname is defined %}{{user.lastname}} {% endif %}" class="form-control {% if session.get('border') %}{{ session.get('border') }} {% endif %}" id="lastname" name="lastname">
				</div>
				<div class="col-12 col-md-6 my-1">
					<label for="firstname" class="form-label">Prenom</label>
					<input type="text" value="{% if user.firstname is defined %}{{user.firstname}} {% endif %}" class=" form-control" {% if session.get('border') %} {{ session.get('border') }} {% endif %} id="firstname" name=" firstname">
				</div>
				<div class="col-12 mb-3 my-1">
					<label for="email" class="form-label">Email</label>
					<input type="text" readonly class="form-control" id="email" name="email" value="{% if user.email is defined %}{{user.email}} {% endif %}">
				</div>
				<div class="col-12 mb-3 d-flex justify-content-between">
					<div class="col-md-6 mb-3">
						<label for="profil" class="form-label">Photo de profil</label>
						<input type="hidden" name="MAX_FILE_SIZE" value="1000000" id="profil">
						<input type="file" id="profil" name="avatar" >
					</div>

					<div class="col-md-6 mb-3" style="width:60px; max-height:60px;object-fit:cover;">
						<img style="width:100%;height:100%;object-fit:cover;" src="/upload/profil/{{ user.avatar }}" alt="{{user.lastname }}" >					
					</div>
				</div>
				
				<input type="hidden" name="id" value="{% if user.id is defined %}{{user.id}} {% endif %}">

				<div class="col-12 d-flex justify-content-between">
					<button id="submit" class="btn btn-success my-3 rounded py-2 px-3" type="submit">enregister</button>
					<button id="submit" class="btn btn-warning my-3 rounded py-2 px-3" type="submit">annuler</button>
				</div>
			</div>
		</form>
	</div>
	{# {% block javascripts %}{% endblock %} #}
	{% block javascripts %}
		<script src="/assets/javascript/profile.js"></script>
	{% endblock %}
{% endblock %}
