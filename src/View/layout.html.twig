<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" href="/assets/images/favicon.png">
		<link rel="stylesheet" href="/assets/css/main-products.css">
		<link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.css">
		<link rel="stylesheet"
      		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}

		<link rel="stylesheet" href="/assets/css/style.css"> {% block stylesheet %}{% endblock %}
		</head>

		<body class="">
			{% include 'includes/_navbar.html.twig' %}
			<div style="min-height:80vh;" class="container-fluid p-0 m-0">
				{% for flashMessage in session.getFlashMessages() %}
					<div class="alert alert-{{ flashMessage.type }} text-dark fw-bold col-md-5 mx-auto mt-3 p-2 text-center" role="alert">
						<div class="col-12 d-flex justify-content-end">
							<button type="button" class="btn-close btn btn-sm btn-{{ flashMessage.type }}" data-bs-dismiss="alert" aria-label="Close">
								<span class="" aria-hidden="true"></span>
							</button>
						</div>
						<strong>{{ flashMessage.message }}</strong>
					</div>
					{{ session.remove('flashMessages') }}
				{% endfor %}
				{% block content %}{% endblock %}
			</div>
			{% include 'includes/_footer.html.twig'%}
			{% block javascript %}
				<script src="https://kit.fontawesome.com/1115a5dece.js" crossorigin="anonymous"></script>
				<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
			{% endblock %}
		</body>
	</html>
